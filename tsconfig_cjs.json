{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./lib/cjs"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
